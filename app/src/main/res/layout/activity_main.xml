<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.ginpei.rxkotlin_demo.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/runJustHello"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Run just hello" />

        <Button
            android:id="@+id/sleepThread"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sleep in a thread" />

        <Button
            android:id="@+id/sleepRx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sleep in an Rx-ish way" />

        <Button
            android:id="@+id/countUntilWakingUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Count down" />

        <Button
            android:id="@+id/handleUserList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Handle user list" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
